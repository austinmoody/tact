package components

templ EntryForm() {
	<form
		hx-post="/entries"
		hx-target="#entry-list"
		hx-swap="innerHTML"
		hx-on::after-request="this.reset()"
	>
		<fieldset role="group">
			<input
				type="text"
				name="user_input"
				placeholder="2h meeting with client about project X"
				required
				autofocus
			/>
			<button type="submit">
				<span class="htmx-indicator" aria-busy="true"></span>
				Add Entry
			</button>
		</fieldset>
	</form>
}
